<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/secondary"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/xaypanya"
        />

    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ໄຊປັນຍາ ພົງສາ 3CW2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/primary"
        android:gravity="center"
        android:fontFamily="@font/nsl_regular"
    />



    <EditText
        android:inputType="text"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ລະຫັດນັກສຶກສາ"
        android:drawableLeft="@drawable/card"
        android:fontFamily="@font/nsl_regular"
        android:textColor="@color/white"
        android:textColorHint="@color/muted"
        android:backgroundTint="@color/primary"
    />

    <EditText
        android:inputType="text"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ຊື່ ແລະ ນາມສະກຸນ"
        android:drawableLeft="@drawable/person"
        android:fontFamily="@font/nsl_regular"
        android:textColorHint="@color/muted"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        />


    <EditText
        android:inputType="text"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ອີເມວ"
        android:drawableLeft="@drawable/mail"
        android:fontFamily="@font/nsl_regular"
        android:textColorHint="@color/muted"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        />

    <EditText
        android:inputType="text"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ເບີໂທລະສັບ"
        android:drawableLeft="@drawable/call"
        android:fontFamily="@font/nsl_regular"
        android:textColorHint="@color/muted"
        android:backgroundTint="@color/primary"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ລົງທະບຽນ"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nsl_bold"
        android:textColor="@color/secondary"
        android:backgroundTint="@color/primary"

        />

</LinearLayout>
